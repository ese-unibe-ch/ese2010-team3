# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET		/index/{index}							Application.index
GET     /                                       Application.index
POST	/										Secured.newQuestion

GET		/question/{id}							Application.question
POST	/question/{questionId}					Secured.newAnswer

GET     /question/{id}/comments/				Application.commentQuestion

GET		/question/{id}/up						Secured.voteQuestionUp
GET		/question/{id}/down						Secured.voteQuestionDown
GET		/question/{id}/cancel					Secured.voteQuestionCancel

GET		/question/{id}/watch					Secured.watchQuestion
GET		/question/{id}/unwatch					Secured.unwatchQuestion

POST	/question/{id}/tag						Secured.updateTags
GET		/question/{id}/lock						Secured.lockQuestion
GET		/question/{id}/delete					Secured.deleteQuestion

GET		/answer/{question}/{id}/up				Secured.voteAnswerUp
GET		/answer/{question}/{id}/down			Secured.voteAnswerDown
GET		/answer/{question}/{id}/cancel			Secured.voteAnswerCancel
GET		/answer/{questionId}/{answerId}/comment	Application.commentAnswer
GET		/answer/{questionId}/{answerId}/isbest	Secured.selectBestAnswer
GET		/answer/{questionId}/{answerId}/delete	Secured.deleteAnswer

POST	/comment/{questionId}					Secured.newCommentQuestion
POST	/comment/{questionId}/{answerId}		Secured.newCommentAnswer
GET		/comment/{questionId}/{commentId}/delete	Secured.deleteCommentQuestion
GET		/comment/{questionId}/{answerId}/{commentId}/delete	Secured.deleteCommentAnswer

GET    	/user/{name}/delete            			Application.deleteuser
GET    	/user/{name}/truedelete         	 	Secured.deleteUser
GET    	/user/{name}/trueanonymize        		Secured.anonymizeUser

GET		/register								Application.register
POST	/register								Application.signup

GET		/user/{userName}/showprofile/			Application.showprofile
GET		/user/{userName}/editprofile/			Application.editProfile
POST	/user/savedProfile						Secured.saveProfile

GET		/user/{userName}/blockuser				Secured.blockUser

GET		/user/notifications/{content}			Application.notifications
GET		/notification/{id}/follow				Secured.followNotification
GET		/notification/{id}/unwatch				Secured.unwatchQuestionFromList
GET		/notification/{id}/delete				Secured.deleteNotification
GET		/notification/clearNew					Secured.clearNewNotifications

GET		/search/{term}/{index}					Application.search
GET		/search/{term}							Application.search

GET		/admin									Application.admin

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*		/										module:secure
*       /{controller}/{action}                  {controller}.{action}
